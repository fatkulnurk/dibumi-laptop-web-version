    <script src="/Content/assets/modules/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
    <script src="/Content/assets/modules/select2/dist/js/select2.full.min.js"></script>
    <script src="/Content/assets/modules/jquery-selectric/jquery.selectric.min.js"></script>
    @Scripts.Render("~/Content/assets/modules/bootstrap-colorpicker/dist/js/bootstrap-colorpicker.min.js")
    @Scripts.Render("~/Content/assets/modules/bootstrap-timepicker/js/bootstrap-timepicker.min.js")
    @Scripts.Render("~/Content/assets/modules/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js")
    @Scripts.Render("~/bundles/jqueryval")

    @Scripts.Render("~/Content/assets/js/page/forms-advanced-forms.js")
