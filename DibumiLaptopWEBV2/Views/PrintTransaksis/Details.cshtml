@model DibumiLaptopWEBV2.Models.transaksi

@{
    Layout = null;
    ViewBag.Title = "Details";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewBag.Title - DibumiLaptop</title>

    <!-- General CSS Files -->
    @Styles.Render("~/Content/assets/modules/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Content/assets/modules/fontawesome/css/all.min.css")


    <!-- CSS Libraries -->
    <!-- Template CSS -->
    @Styles.Render("~/Content/assets/css/style.css")
    @Styles.Render("~/Content/assets/css/components.css")
</head>

<body>

    <div class="invoice">
        <div class="invoice-print">
            <div class="row">
                <div class="col-lg-12">
                    <div class="invoice-title">
                        <h2>Invoice PT. Dibumi Dot Com</h2>
                        <div class="invoice-number">Kode Order #@Html.DisplayFor(model => model.id)</div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <address>
                                <strong>Pemberitahuan:</strong><br>
                                Invoice ini adalah bukti pembayaran yang sah<br>
                                harap disimpan untuk pengajuan komplain, pengembalian, atau garansi.
                            </address>
                        </div>
                        <div class="col-md-6 text-md-right">
                            <address>
                                <strong>Tanggal Transaksi:</strong><br>
                                @Html.DisplayFor(model => model.tanggal_transaksi)<br><br>
                            </address>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="section-title">Ringkasan Pembelian</div>
                    <p class="section-lead">Item yang sudah dibeli tidak dapat dibatalkan.</p>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-md">
                            <tr>
                                <th data-width="40">#</th>
                                <th>Item</th>
                                <th class="text-center">Harga</th>
                                <th class="text-center">Jumlah</th>
                                <th class="text-right">Total</th>
                            </tr>
                            <tr>
                                <td>1</td>
                                <td>@Html.DisplayFor(model => model.item.tipe)</td>
                                <td class="text-center">Rp @Html.DisplayFor(model => model.harga_satuan_temp)</td>
                                <td class="text-center">@Html.DisplayFor(model => model.qty)</td>
                                <td class="text-right">Rp @Html.DisplayFor(model => model.total_harga)</td>
                            </tr>
                        </table>
                    </div>
                    <div class="row mt-4">
                        <div class="col-lg-8">
                            <div class="section-title">Deskripsi</div>
                            <p class="section-lead">@Html.DisplayFor(model => model.deskripsi)</p>
                        </div>
                        <div class="col-lg-4 text-right">
                            <div class="invoice-detail-item">
                                <div class="invoice-detail-name">Total  Harga</div>
                                <div class="invoice-detail-value invoice-detail-value-lg">Rp @Html.DisplayFor(model => model.total_harga)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="text-md-right">
            Copyright &copy; 2019 - Fatkul Nur Koirudin
        </div>
    </div>

        <!-- General JS Scripts -->
    @Scripts.Render("~/Content/assets/modules/jquery.min.js")
    @Scripts.Render("~/Content/assets/modules/popper.js")
    @Scripts.Render("~/Content/assets/modules/tooltip.js")
    @Scripts.Render("~/Content/assets/modules/bootstrap/js/bootstrap.min.js")
    @Scripts.Render("~/Content/assets/modules/nicescroll/jquery.nicescroll.min.js")
    @Scripts.Render("~/Content/assets/modules/moment.min.js")
    @Scripts.Render("~/Content/assets/js/stisla.js")

    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    @Scripts.Render("~/Content/assets/js/scripts.js")
    @Scripts.Render("~/Content/assets/js/custom.js")


    <script>
    $(document).ready(function () {
        window.print();
    });
    </script>
