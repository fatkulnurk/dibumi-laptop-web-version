<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>@ViewBag.Title - DibumiLaptop</title>

    <!-- General CSS Files -->
    @Styles.Render("~/Content/assets/modules/bootstrap/css/bootstrap.min.css")
    @Styles.Render("~/Content/assets/modules/fontawesome/css/all.min.css")



    @RenderSection("styles", required: false)

    <!-- CSS Libraries -->
    <!-- Template CSS -->
    @Styles.Render("~/Content/assets/css/style.css")
    @Styles.Render("~/Content/assets/css/components.css")
</head>

<body>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            <div class="navbar-bg"></div>
            <nav class="navbar navbar-expand-lg main-navbar">
                <form class="form-inline mr-auto">
                    <ul class="navbar-nav mr-3">
                        <li><a href="#" data-toggle="sidebar" class="nav-link nav-link-lg"><i class="fas fa-bars"></i></a></li>
                        <li><a href="#" data-toggle="search" class="nav-link nav-link-lg d-sm-none"><i class="fas fa-search"></i></a></li>
                    </ul>
                </form>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="nav-link nav-link-lg nav-link-user">
                            <img alt="image" src="/Content/assets/img/avatar/avatar-1.png" class="rounded-circle mr-1">
                            <div class="d-sm-none d-lg-inline-block">Halo Rudi</div>
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a href="/">Yuhuuu *^_^*</a>
                    </div>
                    <div class="sidebar-brand sidebar-brand-sm">
                        <a href="/">Yuh</a>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="menu-header">Menu Toko</li>
                        <li><a class="nav-link" href="/items"><i class="fas fa-balance-scale"></i> <span>Kelola Item</span></a></li>
                        <li><a class="nav-link" href="/transaksis"><i class="fab fa-bity"></i> <span>Kelola Transaksi</span></a></li>
                        <li><a class="nav-link" href="/return_item"><i class="fas fa-atom"></i> <span>Kelola Return Barang</span></a></li>
                        <li class="menu-header">Report</li>
                        <li><a class="nav-link" href="/reporttransaksis"><i class="fab fa-accusoft"></i> <span>Report Transaksi</span></a></li>
                        <li class="menu-header">Data Master</li>
                        <li><a class="nav-link" href="/kondisis"><i class="fab fa-wpexplorer"></i> <span>Kondisi</span></a></li>
                        <li><a class="nav-link" href="/mereks"><i class="fab fa-superpowers"></i> <span>Merek</span></a></li>
                        <li><a class="nav-link" href="/gudangs"><i class="fab fa-sellcast"></i> <span>Gudang</span></a></li>
                        <li><a class="nav-link" href="/garansis"><i class="fas fa-gavel"></i> <span>Garansi</span></a></li>
                    </ul>

                    <div class="mt-4 mb-4 p-3 hide-sidebar-mini">
                        <a href="/transaksis/Create" class="btn btn-primary btn-lg btn-block btn-icon-split">
                            <i class="fas fa-pencil-alt"></i> Tambah Transaksi
                        </a>
                    </div>
                </aside>
            </div>

            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <div class="section-header">
                        <h1>@ViewBag.title</h1>
                    </div>

                    <div class="section-body">
                        @RenderBody()
                    </div>
                </section>
            </div>
            <footer class="main-footer">
                <div class="footer-left">
                    Copyright &copy; 2019 <div class="bullet"></div> Develop by [ FatkulNurk ]
                </div>
                <div class="footer-right">
                    Built with MVC5 + Entity + Razor
                </div>
            </footer>
        </div>
    </div>

    <!-- General JS Scripts -->
    @Scripts.Render("~/Content/assets/modules/jquery.min.js")
    @Scripts.Render("~/Content/assets/modules/popper.js")
    @Scripts.Render("~/Content/assets/modules/tooltip.js")
    @Scripts.Render("~/Content/assets/modules/bootstrap/js/bootstrap.min.js")
    @Scripts.Render("~/Content/assets/modules/nicescroll/jquery.nicescroll.min.js")
    @Scripts.Render("~/Content/assets/modules/moment.min.js")
    @Scripts.Render("~/Content/assets/js/stisla.js")


    @RenderSection("scripts", required: false)

    <!-- JS Libraies -->
    <!-- Page Specific JS File -->
    <!-- Template JS File -->
    @Scripts.Render("~/Content/assets/js/scripts.js")
    @Scripts.Render("~/Content/assets/js/custom.js")

</body>
</html>